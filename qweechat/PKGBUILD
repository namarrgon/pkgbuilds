#Mintainer: qozy <qozy@qozy.eu>

pkgname=qweechat-git
pkgver=8df6d48
pkgrel=1
pkgdesc="QWeeChat is a Qt remote GUI for WeeChat written in Python."
arch=('any')
url="https://github.com/weechat/qweechat"
license=('GPL')
depends=('python2-pyqt' 'python2-sip')
makedepends=('python2-setuptools' 'git')
source=("$pkgname::git://github.com/weechat/qweechat.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname
  git describe --always | sed 's/-/./g'
}

package() {
  cd $pkgname
  python2 setup.py install --root "$pkgdir" -O2
}

